using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp1
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Har du en tid i sekunder och vill uttrycka den i timmar, minuter och sekunder ist채llet? Ge mig antalet!");
            int s = int.Parse(Console.ReadLine());
           

            int h = s / 3600;
            int mr = s % 3600;
            int m = mr / 60;
            int sn = mr % 60;

            Console.WriteLine("AH, l채tt! Det blir " + h + " timmar, " + m + " minuter, och " + sn + " sekunder!");
            Console.WriteLine("Var det r채tt? Noice! Klicka enter nu och forts채tt knacka kod");
            Console.ReadLine();

         
        }
    }
}
